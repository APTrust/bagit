{
    "name": "DART",
    "version": "2.0.0",
    "description": "DART is the Digital Archivist's Resource Tool for packaging and shipping digital matierials.",
    "main": "ui/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/APTrust/dart.git"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Andrew Diamond",
        "email": "dev@aptrust.org"
    },
    "dependencies": {
        "archiver": "^3.0.0",
        "asar": "^0.14.6",
        "conf": "git+https://github.com/APTrust/conf.git",
        "dateformat": "^3.0.3",
        "documentation": "^9.1.1",
        "electron-context-menu": "^0.11.0",
        "electron-log": "^3.0.0",
        "electron-store": "^2.0.0",
        "es6-error": "^4.1.1",
        "handlebars": "^4.0.12",
        "minio": "^7.0.4",
        "nexe": "^2.0.0-rc.34",
        "os-locale": "^3.1.0",
        "popper.js": "^1.14.7",
        "require-dir": "^1.2.0",
        "tar-stream": "^2.0.0",
        "tmp": "0.0.33",
        "vue": "^2.6.4",
        "winston": "^3.2.1",
        "y18n": "^4.0.0"
    },
    "devDependencies": {
        "babel-plugin-transform-async-generator-functions": "^6.24.1",
        "electron": "^4.0.4",
        "electron-builder": "^20.38.5",
        "electron-rebuild": "^1.8.2",
        "electron-toolkit": "^1.0.24",
        "jest": "^24.1.0",
        "tape": "^4.9.2"
    },
    "scripts": {
        "electron-toolkit": "electron ./node_modules/electron-toolkit",
        "start": "electron .",
        "release": "build",
        "test": "jest"
    },
    "build": {
        "appId": "com.electron.DART",
        "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
        "copyright": "Copyright Â© 2019 APTrust",
        "productName": "DART",
        "electronVersion": "4.0.0",
        "asar": true,
        "directories": {
            "output": "dist"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "public.app-category.productivity"
        },
        "linux": {
            "target": [
                {
                    "target": "deb"
                }
            ],
            "category": "public.app-category.productivity"
        }
    }
}
